{% extends 'layout.twig' %}

{% block style %}
  <link href="../template/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
  <link href="../template/vendor/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
  <link href="../template/vendor/datatables/dataTables.bootstrap4.css" rel="stylesheet">
  <link href="../template/css/sb-admin.css" rel="stylesheet">
  <link rel="stylesheet" href="../css/user_options.css">
{% endblock %}

{% block content %}
  {% include 'header.twig' %}
  {% if options.type == "super_admin" %}

  <form class="" action="/user/option_entreprise/{{ options.id }}" method="post">
    <input type="text" name="nom_entreprise" placeholder="Votre nom d'entreprise" value="{{ options.content.nom_entreprise}}">
    <input type="text" name="adresse_entreprise" placeholder="Votre adresse d'entreprise" value="{{ options.content.adresse_entreprise }}">
    <input type="text" name="code_postal_entreprise" placeholder="Votre code postal d'entreprise" value="{{ options.content.code_postal_entreprise }}">
    <input type="text" name="ville_entreprise" placeholder="Votre ville d'entreprise" value="{{ options.content.ville_entreprise }}">
    <input type="text" name="numero_siret" placeholder="Votre numéro de SIRET" value="{{ options.content.numero_siret}}">
    <input type="submit" name="send" value="Sauvegarder">
  </form>

  {% elseif options.type == "admin" %}
    <form class="" action="/user/option_entreprise/{{ options.id }}" method="post">
      <input type="text" name="nom_entreprise" placeholder="Votre nom d'entreprise" value="{{ options.content.nom_entreprise}}">
      <input type="text" name="adresse_entreprise" placeholder="Votre adresse d'entreprise" value="{{ options.content.adresse_entreprise }}">
      <input type="text" name="code_postal_entreprise" placeholder="Votre code postal d'entreprise" value="{{ options.content.code_postal_entreprise }}">
      <input type="text" name="ville_entreprise" placeholder="Votre ville d'entreprise" value="{{ options.content.ville_entreprise }}">
      <input type="text" name="numero_siret" placeholder="Votre numéro de SIRET" value="{{ options.content.numero_siret}}">
      <input type="submit" name="send" value="Sauvegarder">
    </form>
  {% endif %}
  {% include 'footer.twig' %}
{% endblock %}

{% block script %}
  <script src="../template/vendor/jquery/jquery.min.js"></script>
  <script src="../template/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
  <script src="../template/js/sb-admin.min.js"></script>
{% endblock %}
