{% extends 'layout.twig' %}

{% block style %}
  <link href="../template/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
  <link href="../template/vendor/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
  <link href="../template/vendor/datatables/dataTables.bootstrap4.css" rel="stylesheet">
  <link href="../template/css/sb-admin.css" rel="stylesheet">
  <link rel="stylesheet" href="../css/display_agenda.css">
{% endblock %}

{% block content %}
  {% include 'header-telepro.twig' %}
    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
      <thead>
        <tr>
          <th>Nom</th>
          <th>Date de creation</th>
        </tr>
      </thead>
      <tbody>
        {% for lead in leads %}
        <tr>
          {% if lead.statut == 5 %}
            <td><a href="#">{{ lead.nom }}</a></td>
            <td><a href="#">{{ lead.created_at }}</a></td>
            <input type="hidden" name="id_lead" value="{{ lead.id }}">
          {% elseif lead.statut == 6 %}
            <td><a href="#" class="green">{{ lead.nom }}</a></td>
            <td><a href="#" class="green">{{ lead.created_at }}</a></td>
            <input type="hidden" name="id_lead" value="{{ lead.id }}">
          {% endif %}
        </tr>
        {% endfor %}
      </tbody>
    </table>
    <div class="pop_up"><div class="text"></div></div>
  {% include 'footer.twig' %}
{% endblock %}

{% block script %}
  <script src="../template/vendor/jquery/jquery.min.js"></script>
  <script src="../template/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
  <script src="../template/js/sb-admin.min.js"></script>
  <script src="../js/display_lead_agenda.js" charset="utf-8"></script>
{% endblock %}
