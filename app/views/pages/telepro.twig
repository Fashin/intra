{% extends 'layout.twig' %}

{% block style %}
  <link href="../template/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
  <link href="../template/vendor/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
  <link href="../template/vendor/datatables/dataTables.bootstrap4.css" rel="stylesheet">
  <link href="../template/css/sb-admin.css" rel="stylesheet">
  <link rel="stylesheet" href="../css/telepro.css">
{% endblock %}

{% block content %}
  {% include 'header-telepro.twig' %}
  <input type="hidden" name="user_id" class="id_user" value="{{ user.id }}">
  <div class="card mb-3">
    <div class="card-header">
      <i class="fa fa-table"></i> Liste des leads
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
          <thead>
            <tr>
              <th>Nom</th>
              <th>Prénom</th>
              <th>Téléphone</th>
              <th>Date d'envoie</th>
              <th>Rappel</th>
            </tr>
          </thead>
          <tfoot>
            <tr>
              <th>Nom</th>
              <th>Prénom</th>
              <th>Téléphone</th>
              <th>Date d'envoie</th>
              <th>Rappel</th>
            </tr>
          </tfoot>
          <tbody>
            {% for date, dates in current_leads %}
              {% for lead in dates %}
                <tr>
                  <td>
                    <a style="color:{{ user.lead_color }}" href="/telepro/get_one_lead/{{ lead.id }}">
                      {{lead.nom}}
                    </a>
                  </td>
                  <td>
                    <a style="color:{{ user.lead_color }}" href="/telepro/get_one_lead/{{ lead.id }}">
                      {{lead.prenom}}
                    </a>
                  </td>
                  <td>
                    <a style="color:{{ user.lead_color }}" href="/telepro/get_one_lead/{{ lead.id }}">
                      {{lead.telephone}}
                    </a>
                  </td>
                  <td>
                    {{ date }}
                  </td>
                  <td></td>
                  <input type="hidden" name="id_lead" value="{{ lead.id }}">
                </tr>
              {% endfor %}
              <td colspan="5" class="new_day"></td>
            {% endfor %}
          </tbody>
        </table>
      </div>
    </div>
  </div>
  {% include 'footer.twig' %}
{% endblock %}

{% block script %}
  <script src="../template/vendor/jquery/jquery.min.js"></script>
  <script src="../template/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
  <script src="../template/js/sb-admin.min.js"></script>
  <script src="../js/User.class.js" charset="utf-8"></script>
  <script src="../js/rappel_telepro.js"></script>
{% endblock %}
