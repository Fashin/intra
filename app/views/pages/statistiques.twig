{% extends 'layout.twig' %}

{% block style %}
  <link href="../template/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
  <link href="../template/vendor/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
  <link href="../template/vendor/datatables/dataTables.bootstrap4.css" rel="stylesheet">
  <link href="../template/css/sb-admin.css" rel="stylesheet">
  <link rel="stylesheet" href="../css/leads.css">
  <link rel="stylesheet" href="../css/statistiques.css">
{% endblock %}

{% block content %}
  {% include 'header.twig' %}
  <div class="filtres">
    <div class="multiselect">
      <div class="selectBox">
        <select>
          <option>Campagne a afficher</option>
        </select>
        <div class="overSelect"></div>
      </div>
      <div id="checkboxes">
        {% for campagne in campagnes %}
        <label for="{{ campagne.name }}">
          <input type="checkbox" id="{{ campagne.name }}" name="campagne" value="{{ campagne.name }}"> {{ campagne.name }}
        </label>
        {% endfor %}
      </div>
    </div>
    <select name="type">
      <option value="visiteur">Visiteurs</option>
      <option value="leads">Leads</option>
      <option value="transformation">Transformation</option>
    </select>
    <label for="date_start">
      De : <input id="date_start" type="date" name="start">
    </label>
    <label for="date_end">
      A : <input id="date_end" type="date" name="end" >
    </label>
    <button type="button" name="button" class="sort_date">Trier</button>
  </div>

  <canvas id="curve" width="1000" height="300"></canvas>
  <div class="curve_label"></div>
  <div class="curve_row"></div>
  <div class="curve_response ret_statistiques"></div>

  {% include 'footer.twig' %}
{% endblock %}

{% block script %}
  <script src="../template/vendor/jquery/jquery.min.js"></script>
  <script src="../template/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
  <script src="../template/js/sb-admin.min.js"></script>
  <script src="../js/Statistiques/Statistiques.class.js" charset="utf-8"></script>
  <script src="../js/page_statistique.js" charset="utf-8"></script>
{% endblock %}
