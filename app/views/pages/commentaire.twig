{% extends 'layout.twig' %}

{% block style %}
  <link href="../template/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
  <link href="../template/vendor/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
  <link href="../template/vendor/datatables/dataTables.bootstrap4.css" rel="stylesheet">
  <link href="../template/css/sb-admin.css" rel="stylesheet">
  <link rel="stylesheet" href="../css/commentaire.css">
{% endblock %}

{% block content %}
  {% include 'header.twig' %}

    <div class="card mb-3">
      <div class="card-header">
        <i class="fa fa-table"></i> Liste des commentaires
      </div>
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
            <thead>
              <tr>
                <th>Nom</th>
                <th>Value</th>
                <th>Mettre en ligne</th>
              </tr>
            </thead>
            <tbody>
              {% for commentaire in commentaires %}
                <tr>
                  <td>{{ commentaire.nom }}</td>
                  <td>{{ commentaire.value }}</td>
                  {% if commentaire.traitement == "en_cour" %}
                    <td>
                      <input type="hidden" name="id" value="{{ commentaire.id }}">
                      <i class="fa fa-power-off fa-2x" id="orange"></i>
                    </td>
                  {% else %}
                    <td>
                      <input type="hidden" name="id" value="{{ commentaire.id }}">
                      <i class="fa fa-power-off fa-2x" id="green"></i>
                    </td>
                  {% endif %}
                </tr>
              {% endfor %}
            </tbody>
          </table>
        </div>
      </div>
    </div>

  {% include 'footer.twig' %}
{% endblock %}

{% block script %}
  <script src="../template/vendor/jquery/jquery.min.js"></script>
  <script src="../template/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
  <script src="../template/js/sb-admin.min.js"></script>
  <script src="../js/comment_space.js" charset="utf-8"></script>
{% endblock %}
